<!DOCTYPE html>
<html>
  <head>
    <title>todo-list</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>TODO LIST</h1>
    <form method="POST" action="/">
      <input type="text" name="item"/>
      
      <input type="submit" value="add item">
    </form>
    <ul>
      <%- items.map(function(item){return '<li>'+item+'</li>';}).join('\n')%>
    </ul>
  </body>
</html>
